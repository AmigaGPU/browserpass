{
  "manifest_version": 2,
  "name": "chrome-gopass",
  "description": "Firefox extension for zx2c4's pass (password manager).",
  "version": "1.0",
  "author": "Danny van Kooten",
  "homepage_url": "https://github.com/dannyvankooten/gopass",
  "browser_action": {
    "default_icon": "icon-lock.png",
    "default_popup": "content.html"
  },
  "permissions": [
    "activeTab",
    "nativeMessaging"
  ],
 "applications": {
    "gecko": {
      "id": "gopass@dannyvankooten.com",
      "strict_min_version": "42.0"
    }
  }
}
